    <main class="container mt-5">
        <h1 class="text-center">Cartelera</h1>
        <div class="row">
            @foreach (var pelicula in Model)
            {
                    <div class="col-md-4 mb-4">
                        <div class="card">
                            <img src="@pelicula.Imagen" class="card-img-top" alt="@pelicula.Titulo">
                            <div class="card-body">
                                <h5 class="card-title">@pelicula.Titulo</h5>
                                <p class="card-text">@pelicula.DescripcionCorta</p>
                                <p class="card-text"><strong>Director:</strong> @pelicula.Director</p>
                                <p class="card-text"><strong>Actores:</strong> @pelicula.Actor</p>
                                <p class="card-text"><strong>Duración:</strong> @pelicula.Duracion minutos</p>
                                <p class="card-text"><strong>Año:</strong> @pelicula.Año</p>
                                <p class="card-text"><strong>Género:</strong> @pelicula.Genero</p>
                            <!-- Botón que abre el modal -->
                            <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#videoModal" data-url="@pelicula.Url">
                                Trailer
                            </button>
                            </div>
                        </div>
                    </div>
            }
        </div>

        <!-- Modal para el video -->
        <div class="modal fade" id="videoModal" tabindex="-1" aria-labelledby="videoModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="videoModalLabel">Trailer</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <!-- Contenedor del video -->
                        <div class="ratio ratio-16x9">
                            <iframe id="videoIframe" src="" frameborder="0" allowfullscreen></iframe>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <h2 class="text-center">Próximamente</h2>

