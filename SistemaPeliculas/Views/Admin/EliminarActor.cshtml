@model SistemaPeliculas.Models.Actor

<h1>Eliminar Actor</h1>
<form asp-action="EliminarActorConfirmado" method="post">
    <div>
        <h4>¿Estás seguro de que deseas eliminar este actor?</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>Actor</dt>
            <dd>@Model.Actor1</dd>
        </dl>
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Eliminar</button> |
        <a asp-action="Actores" class="btn btn-secondary">Cancelar</a>
    </div>
</form>
